<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.mobile.com.termproject">

    <!-- 내 프로젝트에 대한 보안 수준 설정.-->
    <permission
        android:name="my.mobile.com.termproject.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- 구글맵 API v2의 권한 설정 -->
    <uses-permission android:name="my.mobile.com.termproject.permission.MAPS_RECEIVE" />

    <!-- 구글맵 API v2의 일반 권한 설정. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- 일반 권한 설정 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- OpenGL 사용 설정 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- 라이브러리 사용 설정 -->
        <uses-library android:name="com.google.android.maps" />

        <!-- 구글맵 API v2 키 설정 -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA2E_LyPl2w_-QIbE3un6vXA2tPd6HiBZE" />

        <!-- GMS 라이브러리 버전 설정 -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".GoalActivity"/>
        <activity android:name=".RecordActivity"/>
        <activity android:name=".ShowActivity"/>
        <activity android:name=".StatisticActivity"/>
        <activity android:name=".MapActivity1"/>
        <activity android:name=".MapActivity2"/>
        <activity android:name=".ShowListActivity1"/>
        <activity android:name=".ShowListActivity2"/>
        <activity android:name=".ShowWeatherActivity"/>

    </application>

</manifest>
