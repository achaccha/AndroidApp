<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보 리스트 뷰"
        android:textSize="30dp"
        android:gravity="center"
        android:alpha="0.6"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/listbtn01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color01"
            android:text="공부"/>
        <Button
            android:id="@+id/listbtn02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color02"
            android:text="근로"/>
        <Button
            android:id="@+id/listbtn03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color03"
            android:text="식사"/>
        <Button
            android:id="@+id/listbtn04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color04"
            android:text="휴식"/>
        <Button
            android:id="@+id/listbtn05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color05"
            android:layout_weight="1"
            android:text="이동"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/countText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LIST에 나타나는 개수 : "
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <Button
            android:id="@+id/list_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="종료"
            android:textSize="20dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

</LinearLayout>